<!DOCTYPE html>
<html>
<head>
  <title>htee</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <%= favicon_link_tag 'favicon.ico' %>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="navbar navbar-inverse" role="navigation">
        <div class="navbar-header">
          <%= link_to 'htee', root_path, class: 'htee-font navbar-brand' %>
        </div>
        <div class="navbar-collapse">
          <ul class="nav navbar-nav">
            <li>
              <a class="btn navbar-btn btn-default" data-toggle="modal" data-target="#lite-stream-modal">
                Lite Stream
              </a>
            </li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
          <%- if github_user -%>
            <li class="dropdown">
              <button class="btn navbar-btn btn-default dropdown-toggle" data-toggle="dropdown">
                <%= gravatar_image_tag(github_user.email, class: 'gravatar-img') %>
                <%= github_user.name %>
                <span class="caret"></span>
              </button>
              <ul class="dropdown-menu">
                <li>
                  <%=link_to 'Settings', settings_path %>
                </li>
                <li class="divider"></li>
                <li>
                  <%=link_to 'Sign out', logout_path %>
                </li>
              </ul>
            </li>
          <%- else -%>
            <li>
              <%= button_to 'Sign in with GitHub', login_path, class: 'btn btn-success navbar-btn' %>
            </li>
          <%- end -%>
          </ul>
        </div>
      </div>
    </div>
  </div>

<%= yield %>

<%= render partial: "lite_stream_modal" %>

</body>
</html>
